<NyprAToggleBox class="c-toggle-box--linkroll c-toggle-box__label" @calculatePosition={{this.calculatePosition}} as |toggle|>
  <toggle.trigger>
    View All Brands
  </toggle.trigger>

  <toggle.dropdown>
    <nav class="c-nypr-nav" role="navigation" aria-label="NYPR brands navigation">
      <ul class="c-nypr-nav__list">
        {{#each this.items as |item|}}
          <li class="c-nypr-nav__item">
            <a
              href={{item.url}}
              class="c-nypr-nav__link u-has-accent u-has-accent--secondary"
              target="_blank"
              rel="noopener"
            >
              {{item.title}}
            </a>
          </li>
        {{/each}}
      </ul>
    </nav>
  </toggle.dropdown>
</NyprAToggleBox>