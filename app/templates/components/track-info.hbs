<div class="dot"></div>
<div class="metadata">
  <div class="composer">{{composerName}}</div>
  <div class="title_expand">
    {{#if (or ensembleName conductorName)}}
    <NyprAToggleBox class="secondary-metadata-toggle-box" as |toggle|>
      <toggle.trigger>
        <span class="title">{{trackTitle}}</span>
      </toggle.trigger>
      <toggle.dropdown>
        <div class="secondary-metadata-content">
          {{#if ensembleName}}
            <div class="ensemble secondary-metadata-content-field">Performed by the {{ensembleName}}</div>
          {{/if}}
          {{#if conductorName}}
            <div class="conductor secondary-metadata-content-field">Conducted by {{conductorName}}</div>
          {{/if}}
        </div>
      </toggle.dropdown>
    </NyprAToggleBox>
    {{else}}
      <span class="title">{{trackTitle}}</span>
    {{/if}}
  </div>
</div>
<div class="start-time">{{format-start-time startTime}}</div>


{{yield}}