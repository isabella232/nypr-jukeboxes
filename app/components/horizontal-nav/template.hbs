<div class="horizontal-nav__container">
  <nav class="horizontal-nav__nav">
    <ul class="horizontal-nav__list">
      {{#each parsedLinks as |link index|}}
        <li class="{{if (eq index activeTabIndex) 'is-active '}}horizontal-nav__list-item">
          {{link-to link.title link.nav-slug classNames="horizontal-nav__link"}}
        </li>
      {{/each}}
    </ul>
    {{sliding-bar class="horizontal-nav__indicator" positionX=indicatorX width=indicatorWidth}}
  </nav>
</div>
