<div class="dot"></div>
<div class="test">
  <div class="currently-listening-to-label">Currently Playing</div>
  <div class="metadata">
    <TrackAdditionalInfo @ensembleName={{ensembleName}} @conductorName={{conductorName}} as |options|>
      <div class="composer">
        {{composerName}}
      </div>
      <div class="title">
        {{trackTitle}} {{options.icon}}
      </div>
    </TrackAdditionalInfo>
  </div>

</div>

<div class="start-time" data-time={{startTime}}>
  {{#if isLive}}
  Now
  {{else}}
  {{moment-format startTime "h:mm A"}}
  {{/if}}
</div>

{{yield}}