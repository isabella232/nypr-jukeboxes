<!-- we aren't using stream banner in order to make currentStream a more global value -->
  <div class="jukebox-display-header">
    <div class="jukebox-display__current-stream"> {{currentStream.name}} </div>
  </div>

  <div class="jukebox-display-details">
    {{#if currentStream.currentPiece}}
      <h2 class="h2">{{currentStream.currentComposer.name}}</h2>
      <h3 class="h3">{{currentStream.currentPiece}}</h3>
    {{else}}
      <h2 class="h2">{{currentStream.currentShow.showTitle}}</h2>
      {{#if currentStream.currentShow.episodeTitle}}
        <h3 class="h3">{{currentStream.currentShow.episodeTitle}}</h3>
      {{/if}}
    {{/if}}
  </div>


  <div class="jukebox-display-controls">
    {{#listen-button
      type='vanilla'
      class='jukebox-display'
      data-action="Clicked Play/Pause Stream: jukebox-display"
      data-label=currentStream.name
      itemPK=currentStream.slug
      itemTitle=currentStream.name}}
      <div class="listen-ui">
        <img src="assets/svgs/play.svg" class="icon icon--play">
        <img src="assets/svgs/pause.svg" class="icon icon--pause">
      </div>
    {{/listen-button}}
  </div>
