<div class="play-schedule-show-header" {{action (optional (if tracks (action "togglePlaylistVisible") null))}}>
  <div class="show-dot"></div>
  <div class="playlist-show-info">

    <div class="playlist-show-metadata">
      <div class="playlist-show-info-time">
        {{#if (show-is-on-air-now startTime endTime)}}
          <span class="playlist-show-info-on-air-now">ON AIR NOW</span>
        {{/if}}
        <span class="playlist-show-info-time-range">
          {{format-show-time startTime endTime}}
        </span>
      </div>

      <div class="playlist-show-info-title">{{title}}</div>
    </div>

    {{#if tracks}}
      <div class="playlist-show-expand">
        {{nypr-svg icon="left-arrow"}}
      </div>
    {{/if}}
  </div>
</div>

{{#if (and tracks this.isPlaylistVisible)}}
  <div class="play-schedule-show-playlist">
    {{#each tracks as |track|}}
      <TrackInfo
        @trackTitle={{track.catalogEntry.title}}
        @ensembleName={{track.catalogEntry.ensemble.name}}
        @conductorName={{track.catalogEntry.conductor.name}}
        @composerName={{track.catalogEntry.composer.name}}
        @startTime={{track.startTime}}
      />
    {{/each}}
  </div>
{{/if}}

{{yield}}
